    <form action="/posts/create" method="post" enctype="multipart/form-data">
        <div class="form-row">
            <div class="col">
                <label for="postTitle">Post Title</label>
                <input type="text" name="postTitle" id="postTitle" class="form-control" placeholder="Post Title">
            </div>
            <div class="col">
                <label for="postTag">Post Tag</label>
                <select class="form-control" name="postTag" id="postTag">
                    <option value="default" disabled selected>Select Tag</option>
                    <option value="Life Style">Life Style</option>
                    <option value="Health">Health</option>
                    <option value="Education">Education</option>
                    <option value="Security">Security</option>
                    <option value="Food">Food</option>
                </select>
            </div>
        </div>
        <div class="custom-file">
            <input type="file" name="postImage" class="custom-file-input" id="postImage">
            <label class="custom-file-label" for="postImage">Choose file</label>
        </div>
        <div class="form-group">
            <label for="postBody">Example textarea</label>
            <textarea class="form-control" id="postBody" name="postBody" rows="3"></textarea>
        </div>
        <button type="submit" class="btn btn-success">Create Post</button>
    </form>
